<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/product_left"
        android:paddingTop="@dimen/product_edge"
        android:paddingBottom="@dimen/product_edge"
        android:paddingRight="@dimen/product_edge">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvMain"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="1"
            />

        <TextView
            android:id="@+id/tvMain"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="@dimen/product_center"
            android:paddingRight="@dimen/product_left"
            android:maxLines="2"
            android:ellipsize="end"
            android:singleLine="false"
            android:text="Support Text1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            />
        <TextView
            android:id="@+id/tvSub"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/product_center"
            android:paddingRight="@dimen/product_left"
            android:maxLines="2"
            android:ellipsize="end"
            android:singleLine="false"
            android:text="Support Text1"
            android:paddingTop="5dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tvMain"

            />
        <RelativeLayout
            android:id="@+id/vPriceBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="@dimen/product_center"
            android:paddingRight="@dimen/product_left"
            android:paddingBottom="5dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tvSub"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/tvPriceLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tvPriceRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="false"
                android:text=".99 $"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/tvPriceLeft"
                android:layout_toRightOf="@+id/tvPriceLeft"
                />
        </RelativeLayout>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tvMain,tvSub,vPriceBox"
            app:barrierDirection="end"
            />
        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/baseline_bookmark_border_black_24"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@+id/barrier"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvMain"
            app:layout_constraintBottom_toTopOf="@+id/iconBox"
            app:layout_constraintVertical_chainStyle="spread_inside"
            />

        <RelativeLayout
            android:id="@+id/iconBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            app:layout_constraintLeft_toRightOf="@+id/barrier"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bookmark"
            app:layout_constraintVertical_chainStyle="spread_inside">
            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
