<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/v_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/deep_orange_500"
    xmlns:tools="http://schemas.android.com/tools">
    <com.pixlee.pixleesdk.ui.widgets.PXLPhotoView
        android:id="@+id/pxlPhotoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:theme="@style/Pixlee.Theme.App"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:clipToPadding="false"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <View
                android:id="@+id/leftHeaderGuide"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <View
                android:id="@+id/rightHeaderGuide"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <RelativeLayout
                android:id="@+id/vBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/leftHeaderGuide"
                app:layout_constraintTop_toTopOf="@+id/leftHeaderGuide"
                app:layout_constraintRight_toRightOf="@+id/leftHeaderGuide"
                app:layout_constraintBottom_toBottomOf="@+id/leftHeaderGuide"
                >
                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/round_close_black_18"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vMute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/rightHeaderGuide"
                app:layout_constraintTop_toTopOf="@+id/rightHeaderGuide"
                app:layout_constraintRight_toRightOf="@+id/rightHeaderGuide"
                app:layout_constraintBottom_toBottomOf="@+id/rightHeaderGuide">
                <ImageView
                    android:id="@+id/ivMute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/outline_volume_off_black_24"
                    />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</RelativeLayout>