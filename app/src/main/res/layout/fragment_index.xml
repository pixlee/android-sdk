<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_apis"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonDefault"
                android:id="@+id/btAlbum"
                android:paddingTop="16sp"
                android:paddingBottom="13dp"
                android:text="@string/title_album"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonDefault"
                android:id="@+id/btImageUploader"
                android:text="@string/title_upload_image"
                android:textSize="16sp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonDefault"
                android:id="@+id/btAnalytics"
                android:text="@string/title_analytics"
                android:textSize="16sp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:alpha="0.1"
                android:background="?attr/colorOnSurface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_components"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonOutLined"
                android:id="@+id/btWidgets"
                android:text="@string/title_widgets"
                android:textSize="16sp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonOutLined"
                android:id="@+id/btPhotoOnList"
                android:text="@string/title_photo_on_list"
                android:textSize="16sp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>