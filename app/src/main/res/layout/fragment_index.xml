<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_ktx_apis"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"/>
            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonDefault"
                android:id="@+id/btKtxAlbumList"
                android:textSize="14sp"
                android:paddingTop="16sp"
                android:paddingBottom="13dp"
                android:text="@string/title_ktx_album_list"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonDefault"
                android:id="@+id/btKtxAlbumGrid"
                android:textSize="14sp"
                android:paddingTop="16sp"
                android:paddingBottom="13dp"
                android:text="@string/title_ktx_album_grid"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonDefault"
                android:id="@+id/btKtxAnalytics"
                android:text="@string/title_ktx_analytics"
                android:textSize="14sp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_java_apis"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"/>
            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonDefault"
                android:id="@+id/btAlbum"
                android:paddingTop="16sp"
                android:paddingBottom="13dp"
                android:text="@string/title_java_album"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonDefault"
                android:id="@+id/btImageUploader"
                android:text="@string/title_java_upload"
                android:textSize="16sp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonDefault"
                android:id="@+id/btAnalytics"
                android:text="@string/title_java_analytics"
                android:textSize="16sp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/margin"
                android:alpha="0.1"
                android:background="?attr/colorOnSurface"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:paddingBottom="@dimen/padding">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchDarkMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:switchPadding="16dp"
                        android:text="@string/darkMode"
                        android:textAllCaps="false"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvDarkMode"/>

                    <TextView
                        android:id="@+id/tvDarkMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/darkModeTip"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/switchDarkMode"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>