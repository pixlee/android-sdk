<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonDefault"
                android:id="@+id/bt_album"
                android:text="@string/title_album"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonDefault"
                android:id="@+id/bt_image_uploader"
                android:text="@string/title_upload_image"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/NextButtonOutLined"
                android:id="@+id/bt_analytics"
                android:text="@string/title_analytics"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>