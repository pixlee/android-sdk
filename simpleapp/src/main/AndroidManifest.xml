<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pixlee.pixleeandroidsdk">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Androidsdk">
        <activity
            android:name=".IndexActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Androidsdk.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Androidsdk.NoActionBar"/>

        <activity
            android:name=".pxlwidgetview.DynamicDemoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Androidsdk.NoActionBar"/>

        <activity
            android:name=".pxlwidgetview.MosaicActivity"
            android:screenOrientation="portrait"
            android:label="Mosaic"
            android:theme="@style/Theme.Androidsdk.NoActionBar"/>

        <activity
            android:name=".pxlwidgetview.HorizontalActivity"
            android:screenOrientation="portrait"
            android:label="Horizontal"
            android:theme="@style/Theme.Androidsdk.NoActionBar"/>

        <activity
            android:name=".pxlwidgetview.GridActivity"
            android:screenOrientation="portrait"
            android:label="Grid"
            android:theme="@style/Theme.Androidsdk.NoActionBar"/>

        <activity
            android:name=".pxlwidgetview.ListActivity"
            android:screenOrientation="portrait"
            android:label="List"
            android:theme="@style/Theme.Androidsdk.NoActionBar"/>

        <activity
            android:name=".pxlwidgetview.WidgetActivity"
            android:screenOrientation="portrait"
            android:label="Widget"
            android:theme="@style/Theme.Androidsdk.NoActionBar"/>

    </application>

</manifest>